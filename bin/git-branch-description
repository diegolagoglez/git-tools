#!/bin/bash

source git-tools

check_git_dir

if [ $# == 0 ]; then
	git config branch.$(git rev-parse --abbrev-ref HEAD).description
else
	for branch in $@; do
		echo "Description for: $branch"
		description=$(git config branch.$branch.description)
		if [ "$description" != "" ]; then
			echo -en "\t"
			echo "$description" | sed ':a;N;$!ba;s/\n/\n\t/g'
		fi
	done
fi
